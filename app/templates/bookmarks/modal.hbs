<form class="form-horizontal modal-form" {{action 'save' on='submit'}}>
	<div class="modal-header">
		<button type="button" class="close" {{action 'close'}}>&times;</button>
		<h3>{{#if isNew}} Add a new Link {{else}} Editing: {{unbound title}} {{/if}}</h3>
	</div>
	<div class="modal-body">
		<div class="control-group" {{bindAttr class="errors.title:error :field"}}>
			<label class="control-label">Title</label>
			<div class="controls">
				{{view Ember.TextField valueBinding='title' placeholder='Google'}}
				<span class="help-inline">{{#each msg in errors.title}}{{msg}}{{/each}}</span>
			</div>
		</div>
		<div class="control-group" {{bindAttr class="errors.url:error :field"}}>
			<label class="control-label">URL</label>
			<div class="controls">
				{{view Ember.TextField valueBinding='url' placeholder='http://www.google.com'}}
				<span class="help-inline">{{#each msg in errors.url}}{{msg}}{{/each}}</span>
			</div>
		</div>
		<div class="control-group" {{bindAttr class="errors.description:error :field"}}>
			<label class="control-label">Your comment</label>
			<div class="controls">
				{{view Ember.TextArea valueBinding='description' placeholder='What do you think of this link ?'}}
				<span class="help-inline">{{#each msg in errors.description}}{{msg}}{{/each}}</span>
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn" {{action 'close'}}>Cancel</button>
		<button type="submit" class="btn btn-primary" {{bindAttr disabled="shouldDisableSubmit"}}>Save</button>
	</div>
</form>